<li><%= link_to "Home",   root_path %></li>
<li><%= link_to "Help",   help_path %></li>
<li><%= link_to "Scoreboard", scoreboard_path %></li>
<li><%= link_to "Statistics", statistics_path %></li>
<% if logged_in? %>
  <% if chat_enabled? %>
    <li><%= link_to "Chat",   chat_path %></li>
  <% end %>
  <% if console_enabled? %>
    <li><%= link_to "Console",   console_path %></li>
  <% end %>
  <li><%= link_to "Problems", problems_path %></li>
	<% if current_user.admin? %>
		<li><%= link_to "Submissions", submissions_path %></li>
	<% end %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Account <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to "Profile", current_user %></li>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <li class="divider"></li>
      <li>
        <%= link_to "Log out", logout_path, method: "delete" %>
      </li>
    </ul>
  </li>
	<% if current_user.admin? %>
		<li><%= link_to admin_path, class: 'admin-cog' do %>
      <span class="glyphicon glyphicon-cog"></span>
    <% end %></li>
	<% end %>
<% else %>
  <li><%= link_to "Log in", login_path %></li>
  <li class="nav-cta"><%= link_to "Sign up", signup_path, class: "btn btn-primary", style: "margin-top: 8px; margin-left: 10px; color: white !important;" %></li>
<% end %>
